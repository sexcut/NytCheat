<Window x:Class="NytCheatMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NytCheat" Height="300" Width="450"
        Background="#111111" WindowStyle="None" 
        ResizeMode="NoResize" BorderThickness="1" BorderBrush="#222222">
    <Window.Resources>
        <Storyboard x:Key="FadeInBorder">
            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            To="#3366BB" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(Border.Opacity)"
                             To="1" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="FadeOutBorder">
            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            To="Transparent" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="(Border.Opacity)"
                             To="0" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#151515" MouseDown="TitleBar_MouseDown">
            <Grid>
                <TextBlock Text="NytCheat" Foreground="White" 
                           FontSize="14" VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
                <Button Content="✕" HorizontalAlignment="Right" 
                        Width="30" Background="Transparent" 
                        BorderThickness="0" Foreground="White"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <Rectangle Grid.Row="0" Height="1" VerticalAlignment="Bottom" Fill="#0078D7"/>

        <Grid Grid.Row="1" Margin="15,15,15,10">
            <StackPanel VerticalAlignment="Center">
                <Grid Margin="0,10,0,5">
                    <Border x:Name="CS2HoverBorder" 
                            BorderThickness="1" BorderBrush="Transparent" 
                            Width="400" Height="93"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Opacity="0">
                    </Border>

                    <Border x:Name="CS2SelectedBorder"
        BorderThickness="2" BorderBrush="Transparent"
        Width="400" Height="93"
        HorizontalAlignment="Center" VerticalAlignment="Center"
        Opacity="0">
                    </Border>

                    <Border x:Name="CS2Border" Background="#141414" 
                            Width="398" Height="91" 
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave"
                            MouseDown="GameSelection_MouseDown" 
                            Tag="CS2" Cursor="Hand">
                        <Grid Margin="10">
                            <StackPanel>
                                <TextBlock Text="Spelling Bee" Foreground="Orange" FontWeight="Bold" 
                                         FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock Text="Undetected" Foreground="#666666" 
                                         FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Margin="0,5,0,10">
                    <Border x:Name="VALHoverBorder"
                            BorderThickness="1" BorderBrush="Transparent"
                            Width="400" Height="93"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Opacity="0">
                    </Border>

                    <Border x:Name="VALSelectedBorder"
        BorderThickness="2" BorderBrush="Transparent"
        Width="400" Height="93"
        HorizontalAlignment="Center" VerticalAlignment="Center"
        Opacity="0">
                    </Border>


                    <Border x:Name="VALBorder" Background="#141414" 
                            Width="398" Height="91"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave"
                            MouseDown="GameSelection_MouseDown"
                            Tag="VAL" Cursor="Hand">
                        <Grid Margin="10">
                            <StackPanel>
                                <TextBlock Text="LetterBoxed" Foreground="Green" FontWeight="Bold" 
                                         FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock Text="Undetected" Foreground="#666666" 
                                         FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="15,0,15,10">
            <Border x:Name="LaunchHoverBorder"
                    BorderThickness="1" BorderBrush="Transparent"
                    Opacity="0" Margin="10,0,10,0"/>

            <Border x:Name="LaunchSelectedBorder"
        BorderThickness="2" BorderBrush="Transparent"
        Opacity="0" Margin="10,0,10,0"/>

            <Border Background="#151515" Margin="10,0,10,0">
                <Button x:Name="LaunchButton" Background="Transparent" 
                        BorderThickness="0" Cursor="Hand"
                        Click="LaunchButton_Click" 
                        MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Margin="10,0,10,0">
                    <Grid>
                        <TextBlock x:Name="LaunchText" Text="Select a game" 
                                 Foreground="#AAAAAA" FontSize="14" 
                                 Opacity="1" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NewLaunchText" 
                                 Foreground="White" FontSize="14" 
                                 Opacity="0" HorizontalAlignment="Center"/>
                    </Grid>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Window>
