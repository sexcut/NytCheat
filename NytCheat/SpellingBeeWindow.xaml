<Window x:Class="NytCheatMenu.SpellingBeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spelling Bee Helper" Height="600" Width="800"
        Background="#111111" WindowStyle="None" 
        ResizeMode="NoResize" BorderThickness="1" BorderBrush="#222222">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#151515" MouseDown="TitleBar_MouseDown">
            <Grid>
                <TextBlock Text="NytCheat - Spelling Bee" Foreground="White" 
                           FontSize="14" VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
                <Button Content="✕" HorizontalAlignment="Right" 
                        Width="30" Background="Transparent" 
                        BorderThickness="0" Foreground="White"
                        Click="CloseButton_Click"/>
                <Button Content="—" HorizontalAlignment="Right" 
                        Width="30" Margin="0,0,30,0" Background="Transparent" 
                        BorderThickness="0" Foreground="White"
                        Click="MinimizeButton_Click"/>
            </Grid>
        </Border>

        <!-- Blue Line Below Title Bar -->
        <Rectangle Grid.Row="0" Height="1" VerticalAlignment="Bottom" Fill="#0078D7"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Input Section -->
            <Border Grid.Row="0" Background="#151515" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="Enter Spelling Bee Letters" Foreground="White" 
                       FontSize="16" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Center Letter:" Foreground="#AAAAAA" 
                           FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="CenterLetterInput" Width="30" Height="30" 
                         Background="#222222" Foreground="Orange" FontSize="16" 
                         BorderThickness="1" BorderBrush="#333333" 
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         MaxLength="1" CharacterCasing="Upper"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Outer Letters:" Foreground="#AAAAAA" 
                           FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="OuterLettersInput" Width="150" Height="30" 
                         Background="#222222" Foreground="White" FontSize="16" 
                         BorderThickness="1" BorderBrush="#333333" 
                         VerticalContentAlignment="Center"
                         MaxLength="6" CharacterCasing="Upper"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <!-- Find Words Button (smaller) -->
                        <Button Content="Find Words" Width="120" Height="35"
                    Background="#222222" Foreground="White" Padding="10,5" 
                    BorderThickness="1" BorderBrush="#333333"
                    Click="FindWords_Click"/>

                        <!-- Custom Dictionary Button -->
                        <Button Content="load custom wordlist" Width="120" Margin="0,10,0,0" 
                    Background="#222222" Foreground="#AAAAAA" Padding="10,5" 
                    BorderThickness="1" BorderBrush="#333333" Height="35"
                    Click="LoadCustomDictionary_Click"/>

                        <!-- Dictionary Status -->
                        <TextBlock x:Name="DictionaryStatusText" Text="using default wordlist" 
                     Foreground="#666666" FontSize="11" TextWrapping="Wrap"
                     TextAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>


            <!-- Stats Section -->
            <Border Grid.Row="1" Background="#151515" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Total Words" Foreground="#AAAAAA" FontSize="12"/>
                        <TextBlock x:Name="TotalWordsText" Text="0" Foreground="White" FontSize="18"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="Points" Foreground="#AAAAAA" FontSize="12"/>
                        <TextBlock x:Name="PointsText" Text="0" Foreground="White" FontSize="18"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,20,0">
                        <TextBlock Text="Pangrams" Foreground="#AAAAAA" FontSize="12"/>
                        <TextBlock x:Name="PangramsText" Text="0" Foreground="Orange" FontSize="18"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Perfect Score" Foreground="#AAAAAA" FontSize="12"/>
                        <TextBlock x:Name="PerfectScoreText" Text="No" Foreground="#AAAAAA" FontSize="18"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Results Section -->
            <Border Grid.Row="2" Background="#151515" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" Margin="0,0,5,0" 
                      VerticalScrollBarVisibility="Hidden"
                      PanningMode="VerticalOnly">
                        <StackPanel x:Name="WordList1" Orientation="Vertical"/>
                    </ScrollViewer>

                    <ScrollViewer Grid.Column="1" Margin="5,0,5,0" 
                      VerticalScrollBarVisibility="Hidden"
                      PanningMode="VerticalOnly">
                        <StackPanel x:Name="WordList2" Orientation="Vertical"/>
                    </ScrollViewer>

                    <ScrollViewer Grid.Column="2" Margin="5,0,5,0" 
                      VerticalScrollBarVisibility="Hidden"
                      PanningMode="VerticalOnly">
                        <StackPanel x:Name="WordList3" Orientation="Vertical"/>
                    </ScrollViewer>

                    <ScrollViewer Grid.Column="3" Margin="5,0,0,0" 
                      VerticalScrollBarVisibility="Hidden"
                      PanningMode="VerticalOnly">
                        <StackPanel x:Name="WordList4" Orientation="Vertical"/>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
